{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
  
      "coc-soc-rg_name": {
        "type": "string",
        "defaultValue": "CoC-SOC",
        "metadata": {
          "description": "Name of the resource group dedicated to SOC resources."
        }
      },
      "coc-prod-rg_name": {
        "type": "string",
        "defaultValue": "CoC-Production",
        "metadata": {
          "description": "Name of the resource group dedicated to Production resources."
        }
      },

      "MAIN_pip1_name": {
        "type": "string",
        "defaultValue": "MAIN-pip1",
        "metadata": {
          "description": "Name of the public IP address."
        }
      }
    },

    
    "resources": [
      {
        "type": "Microsoft.Resources/resourceGroups",
        "apiVersion": "2020-06-01",
        "name": "[parameters('coc-soc-rg_name')]",
        "location": "westeurope",
        "properties": {}
      },
      {
        "type": "Microsoft.Resources/resourceGroups",
        "apiVersion": "2020-06-01",
        "name": "[parameters('coc-prod-rg_name')]",
        "location": "westeurope",
        "properties": {}
      },
      {
        "apiVersion": "2019-10-01",
        "name": "CoC-PROD-nestedDeployment",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
          "[resourceId('Microsoft.Resources/resourceGroups/', parameters('coc-prod-rg_name'))]"
        ],
        "resourceGroup": "[parameters('coc-prod-rg_name')]",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "https://famascicoc.blob.core.windows.net/armtemplate/nested1.json",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "publicIPAddresses_pip1_name": {
                  "value": "[parameters('MAIN_pip1_name')]"
              }
          }
        }
      },
  
      {
        "apiVersion": "2019-10-01",
        "name": "CoC-SOC-nestedDeployment",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
          "[resourceId('Microsoft.Resources/resourceGroups/', parameters('coc-soc-rg_name'))]",
          "CoC-PROD-nestedDeployment"
        ],
        "resourceGroup": "[parameters('coc-soc-rg_name')]",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "https://famascicoc.blob.core.windows.net/armtemplate/nested2.json",
            "contentVersion": "1.0.0.0"
          }
        }
      }
    ],
  
  
    "outputs": {
      "pip1ResourceId": {
        "type": "string",
        "value": "[reference('CoC-PROD-nestedDeployment').outputs.pip1ResourceId.value]"
      }
    }
  }
  